<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_user"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    style="@style/DialogLayout">

	<TextView
            android:id="@+id/dateLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ItemLabelStartDate"
            style="@style/EditLabel" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
        <TextView
            android:id="@+id/intervalLabel"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/ItemLabelInterval"
            style="@style/EditLabel" />
        <Spinner
            android:id="@+id/leaveInterval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
			android:entries="@array/leave_intervals"
			android:textColor="#ff000000"
			android:entryValues="@array/leave_intervals" />
			
        <LinearLayout
  			style="@style/ButtonLayout"
  			android:orientation="horizontal"
  			android:layout_width="fill_parent" 
  			android:layout_height="wrap_content">

  		<Button android:id="@+id/save"
  			style="@style/QuickUseButton"
          	android:text="Save" />

	</LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	<TextView android:id="@+id/date"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:paddingLeft="7pt"
    	android:paddingTop="7pt"
    	android:paddingBottom="7pt"
    	android:focusable="false"  
      	android:focusableInTouchMode="false"
      	android:textSize="20sp"
      	android:textColor="#000"/>
    <TextView android:id="@+id/separator"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/separator"
    	android:paddingLeft="4pt"
    	android:paddingRight="4pt"
    	android:paddingTop="7pt"
    	android:paddingBottom="7pt"
    	android:layout_toRightOf="@+id/date"
    	android:focusable="false"  
      	android:focusableInTouchMode="false"
      	android:textSize="20sp"
      	android:textColor="#000"/>
	<TextView android:id="@+id/hours"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingTop="7pt"
    	android:paddingBottom="7pt"
    	android:layout_toRightOf="@+id/separator"
    	android:focusable="false"  
      	android:focusableInTouchMode="false"
      	android:textSize="20sp"
      	android:textColor="#000"/>
    <ImageView android:id="@+id/notes"
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"
    	android:layout_alignParentRight="true"
    	android:focusable="false"  
      	android:focusableInTouchMode="false"
      	android:src="@drawable/ic_action_info"
      	android:layout_centerInParent="true"
      	android:padding="7pt"
      	style="@style/NotesButton"
    	/>
</RelativeLayout>